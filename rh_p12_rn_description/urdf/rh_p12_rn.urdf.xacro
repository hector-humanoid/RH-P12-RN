      <inertial>
        <origin xyz="0.000 0.034 0.004" rpy="0 0 0"/>
        <mass value="0.068"/>
        <!--<inertia ixx="0.00004" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="-0.00001" izz="0.00002" />-->
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
    </link>

    <gazebo reference="${prefix}_link_r1">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/Grey</material>
    </gazebo>

    <!-- Right Joint 2 -->
    <joint name="${prefix}_joint_r2" type="revolute">
      <parent link="${prefix}_link_r1"/>
      <child link="${prefix}_link_r2"/>
      <origin xyz="0.0 0.0493634 0.0285" rpy="0 0 0"/>
      <axis xyz="-1 0 0"/>
      <limit velocity="6.5" effort="1000" lower="0.0" upper="1.0" />
      <dynamics damping="0.7"/>
      <mimic joint="${prefix}_servo_joint" multiplier="0.909" offset="0"/>s
    </joint>
    
    <gazebo>
      <plugin name="mimic_${prefix}_joint_r2" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_r2</mimicJoint>
        <multiplier>0.909</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>

