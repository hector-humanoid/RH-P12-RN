<?xml version="1.0"?>
<robot name="rh_p12_rn" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="rh_p12_rn_macro" params="parent prefix reflect *origin">
    
    <xacro:include filename="$(find hector_xacro_tools)/urdf/inertia_tensors.urdf.xacro" />

    <!-- Base Joint -->
    <joint name="${prefix}_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_base"/>
    </joint>

    <!-- Base -->
    <link name="${prefix}_base">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/base_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <!--
      <inertial>
        <origin xyz="0.000 0.000 0.032" rpy="0 0 0"/>
        <mass value="0.236"/>-->
        <!--<inertia ixx="0.00017" ixy="0.0" ixz="0.0" iyy="0.00011" iyz="0.0" izz="0.00017" />-->
       <!-- <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
      -->

      <xacro:inertial_cuboid_with_pose mass="0.236" x_length="0.08" y_length="0.08" z_length="0.08" >
            <origin xyz="0.000 0.000 0.032" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>

    </link>

    <gazebo reference="${prefix}_base">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Finger Motor Joint -->
    <joint name="${prefix}_servo_joint" type="revolute">
        <origin xyz="0 0.0 0" rpy="0 0 0" />
        <axis xyz="1 0 0" />
        <limit lower="0" upper="1.15" effort="4" velocity="5" />
        <parent link="${prefix}_base" />
        <child link="${prefix}_servo_link" />
    </joint>
    
    <transmission name="${prefix}_servo_joint_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_servo_joint">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_servo_joint_motor">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    
    <link name="${prefix}_servo_link">
      <!--<inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.01" />
        <inertia ixx="1.0e-6" ixy="0.0" ixz="0.0" iyy="1.0e-6" iyz="0.0" izz="1.0e-6" />
      </inertial>
      -->
      <xacro:inertial_cuboid_with_pose mass="0.01" x_length="0.04" y_length="0.04" z_length="0.04" >
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose> 
      
    </link>

    <!-- Right Joint 1-->
    <joint name="${prefix}_joint_r1" type="revolute">
      <parent link="${prefix}_base"/>
      <child link="${prefix}_link_r1"/>
      <origin xyz="0.0 0.008 0.048" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="10" lower="0.0" upper="1.1" />
      <!--<dynamics damping="0.7"/>--> <!--WARNING: This makes Gazebo sim explode-->
      <mimic joint="${prefix}_servo_joint" multiplier="1" offset="0"/>
    </joint>
    
    <gazebo>
      <plugin name="mimic_${prefix}_joint_r1" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_r1</mimicJoint>
        <multiplier>1</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>

    <!-- Right Link 1 -->
    <link name="${prefix}_link_r1">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/r1_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/r1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      
      <!--
      <inertial>
        <origin xyz="0.000 0.034 0.004" rpy="0 0 0"/>
        <mass value="0.068"/>-->
        <!--<inertia ixx="0.00004" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="-0.00001" izz="0.00002" />-->
        <!--<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
      -->

      <xacro:inertial_cuboid_with_pose mass="0.068" x_length="0.04" y_length="0.04" z_length="0.04" >
        <origin xyz="0.000 0.034 0.004" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>
    </link>

    <gazebo reference="${prefix}_link_r1">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Right Joint 2 -->
    <joint name="${prefix}_joint_r2" type="revolute">
      <parent link="${prefix}_link_r1"/>
      <child link="${prefix}_link_r2"/>
      <origin xyz="0.0 0.0493634 0.0285" rpy="0 0 ${M_PI}"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="10" lower="0.0" upper="1.0" />
      <!--<dynamics damping="0.7"/>--> <!--WARNING: This makes Gazebo sim explode-->
      <mimic joint="${prefix}_servo_joint" multiplier="0.909" offset="0"/>s
    </joint>
    
    <gazebo>
      <plugin name="mimic_${prefix}_joint_r2" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_r2</mimicJoint>
        <multiplier>0.909</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>

    <!-- Right Link 2 -->
    <link name="${prefix}_link_r2">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/r2_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/r2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      
      <!--
      <inertial>
        <origin xyz="0.000 0.006 0.011" rpy="0 0 0"/>
        <mass value="0.022"/>-->
        <!--<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.0" />-->
      <!--<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>-->

      <xacro:inertial_cuboid_with_pose mass="0.022" x_length="0.04" y_length="0.04" z_length="0.04" >
        <origin xyz="0.000 -0.006 0.011" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>
    </link>

    <gazebo reference="${prefix}_link_r2">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Left Joint 1 -->
    <joint name="${prefix}_joint_l1" type="revolute">
      <parent link="${prefix}_base"/>
      <child link="${prefix}_link_l1"/>
      <origin xyz="0.0 -0.008 0.048" rpy="0 0 ${M_PI}"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="10" lower="0.0" upper="1.1" />
      <!--<dynamics damping="0.7"/>--> <!--WARNING: This makes Gazebo sim explode-->
      <mimic joint="${prefix}_servo_joint" multiplier="1" offset="0"/>
    </joint>
    
    <gazebo>
      <plugin name="mimic_${prefix}_joint_l1" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_l1</mimicJoint>
        <multiplier>1</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>

    <!-- Left Link 1 -->
    <link name="${prefix}_link_l1">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/l1_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${M_PI}"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/l1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <!--
      <inertial>
        <origin xyz="0.000 -0.034 0.004" rpy="0 0 0"/>
        <mass value="0.068"/>-->
        <!--<inertia ixx="0.00004" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="0.00001" izz="0.00002" />-->
        <!--<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>-->

      <xacro:inertial_cuboid_with_pose mass="0.068" x_length="0.04" y_length="0.04" z_length="0.04" >
        <origin xyz="0.000 0.034 0.004" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>
    </link>

    <gazebo reference="${prefix}_link_l1">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!-- Left Joint 2 -->
    <joint name="${prefix}_joint_l2" type="revolute">
      <parent link="${prefix}_link_l1"/>
      <child link="${prefix}_link_l2"/>
      <origin xyz="0.0 0.0493634 0.0285" rpy="0 0 ${M_PI}"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="10" lower="0.0" upper="1.0" />
      <!--<dynamics damping="0.7"/>--> <!--WARNING: This makes Gazebo sim explode-->s
      <mimic joint="${prefix}_servo_joint" multiplier="0.909" offset="0"/>
    </joint>

    <gazebo>
      <plugin name="mimic_${prefix}_joint_l2" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_l2</mimicJoint>
        <multiplier>0.909</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>

    <!-- Left Link 2 -->
    <link name="${prefix}_link_l2">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/l2_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/l2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      
      <!--
      <inertial>
        <origin xyz="0.000 -0.006 0.011" rpy="0 0 0"/>
        <mass value="0.022"/>-->
        <!--<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.0" />-->
        <!--<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>-->

      <xacro:inertial_cuboid_with_pose mass="0.022" x_length="0.04" y_length="0.04" z_length="0.04" >
        <origin xyz="0.000 -0.006 0.011" rpy="0 0 0" />
      </xacro:inertial_cuboid_with_pose>
    </link>

    <joint name="gripper_grasp_main_joint" type="fixed">
      <origin xyz="0.0 0 0.11" rpy="${M_PI} ${-M_PI*0.5} ${M_PI*0}" />
      <parent link="${prefix}_base" />
      <child link="gripper_grasp_main_link" />
    </joint>

    <link name="gripper_grasp_main_link">
    </link>


    <joint name="gripper_grasp_tip_joint" type="fixed">
      <origin xyz="0.0 0 0.15" rpy="${M_PI} ${-M_PI*0.5} ${M_PI*0}" />
      <parent link="${prefix}_base" />
      <child link="gripper_grasp_tip_link" />
    </joint>

    <link name="gripper_grasp_tip_link">
    </link>

    <gazebo reference="${prefix}_link_l2">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/DarkGrey</material>
    </gazebo>


  </xacro:macro>
</robot>
