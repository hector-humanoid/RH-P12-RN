<?xml version="1.0"?>
<robot name="rh_p12_rn" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="rh_p12_rn_macro" params="parent prefix reflect *origin">

    <!-- Base Joint -->
    <joint name="${prefix}_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_base"/>
    </joint>

    <!-- Base -->
    <link name="${prefix}_base">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/base_convex.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://rh_p12_rn_description/meshes/base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <inertial>
        <origin xyz="0.000 0.000 0.032" rpy="0 0 0"/>
        <mass value="0.236"/>
        <!--<inertia ixx="0.00017" ixy="0.0" ixz="0.0" iyy="0.00011" iyz="0.0" izz="0.00017" />-->
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
    </link>

    <gazebo reference="${prefix}_base">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/Grey</material>
    </gazebo>
    
    <!-- Finger Motor Joint -->
    <joint name="${prefix}_servo_joint" type="revolute">
        <origin xyz="0 0.0 0" rpy="0 0 0" />
        <axis xyz="1 0 0" />
        <limit lower="0" upper="1.15" effort="4" velocity="5" />
        <parent link="${prefix}_base" />
        <child link="${prefix}_servo_link" />
    </joint>
    
    <transmission name="${prefix}_servo_joint_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_servo_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_servo_joint_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    
    <link name="${prefix}_servo_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.01" />
        <inertia ixx="1.0e-6" ixy="0.0" ixz="0.0" iyy="1.0e-6" iyz="0.0" izz="1.0e-6" />
      </inertial>
    </link>

    <!-- Right Joint 1-->
    <joint name="${prefix}_joint_r1" type="revolute">
      <parent link="${prefix}_base"/>
      <child link="${prefix}_link_r1"/>
      <origin xyz="0.0 0.008 0.048" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit velocity="6.5" effort="1000" lower="0.0" upper="1.1" />
      <dynamics damping="0.7"/>
      <mimic joint="${prefix}_servo_joint" multiplier="1" offset="0"/>
    </joint>
    
    <gazebo>
      <plugin name="mimic_${prefix}_joint_r1" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
        <joint>${prefix}_servo_joint</joint>
        <mimicJoint>${prefix}_joint_r1</mimicJoint>
        <multiplier>1</multiplier>
        <offset>0</offset>
        <maxEffort>4</maxEffort>
        <hasPID/>
      </plugin>
    </gazebo>


<!--    <transmission name="${prefix}_transmission_r1">
